import type { ApiResponse, PaginationParams, FilterParams } from "@/types/database"
/**
 * API Client for BNF Intelligence Platform
 * 
 * All requests go through the BFF proxy at /api/v1/*
 * The proxy handles:
 *   - Authentication (validates NextAuth session)
 *   - Service key injection (never exposed to browser)
 *   - User attribution (email forwarded to backend)
 *   - Error handling and timeouts
 * 
 * SECURITY: This client NEVER contacts the backend directly.
 *           All requests stay on the same domain (app.pulsebiz.io).
 */

// ============================================
// Types
// ============================================

interface RequestOptions extends Omit<RequestInit, "body"> {
  body?: unknown
}

// ============================================
// API Client
// ============================================

class ApiClient {
  // All requests go through our BFF proxy — same domain, no CORS
  private baseUrl = "/api/v1"

  /**
   * Core request method
   * 
   * Sends requests to /api/v1/* which the Next.js server proxies 
   * to the FastAPI backend with proper auth headers attached.
   */
  private async request<T>(
    endpoint: string,
    options: RequestOptions = {}
  ): Promise<T> {
    const url = `${this.baseUrl}${endpoint}`

    const { body, ...restOptions } = options

    const config: RequestInit = {
      headers: {
        "Content-Type": "application/json",
        ...((options.headers as Record<string, string>) || {}),
      },
      ...restOptions,
    }

    // Attach body for mutation requests
    if (body !== undefined) {
      config.body = JSON.stringify(body)
    }

    try {
      const response = await fetch(url, config)

      // Handle auth errors (session expired)
      if (response.status === 401) {
        // Redirect to login — session has expired
        if (typeof window !== "undefined") {
          window.location.href = "/login?reason=session_expired"
        }
        throw new Error("Session expired")
      }

      // Handle forbidden
      if (response.status === 403) {
        throw new Error("Access denied")
      }

      // Handle server errors
      if (!response.ok) {
        const errorBody = await response.text()
        let errorMessage = `HTTP ${response.status}`
        try {
          const parsed = JSON.parse(errorBody)
          errorMessage = parsed.detail || parsed.error || parsed.message || errorMessage
        } catch {
          // Not JSON — use status text
          errorMessage = response.statusText || errorMessage
        }
        throw new Error(errorMessage)
      }

      return await response.json()
    } catch (error) {
      if (error instanceof Error && error.message === "Session expired") {
        throw error
      }
      console.error(`API request failed: ${options.method || "GET"} ${url}`, error)
      throw error
    }
  }

  // ============================================
  // Generic CRUD
  // ============================================

  async get<T>(
    endpoint: string,
    params?: PaginationParams & FilterParams
  ): Promise<T> {
    const searchParams = new URLSearchParams()

    if (params) {
      Object.entries(params).forEach(([key, value]) => {
        if (value !== undefined && value !== null) {
          if (Array.isArray(value)) {
            value.forEach((v) => searchParams.append(key, v.toString()))
          } else {
            searchParams.append(key, value.toString())
          }
        }
      })
    }

    const queryString = searchParams.toString()
    const url = queryString ? `${endpoint}?${queryString}` : endpoint

    return this.request<T>(url)
  }

  async getById<T>(endpoint: string, id: string | number): Promise<T> {
    return this.request<T>(`${endpoint}/${id}`)
  }

  async create<T>(endpoint: string, data: unknown): Promise<T> {
    return this.request<T>(endpoint, {
      method: "POST",
      body: data,
    })
  }

  async update<T>(
    endpoint: string,
    id: string | number,
    data: unknown
  ): Promise<T> {
    return this.request<T>(`${endpoint}/${id}`, {
      method: "PUT",
      body: data,
    })
  }

  async patch<T>(
    endpoint: string,
    id: string | number,
    data: unknown
  ): Promise<T> {
    return this.request<T>(`${endpoint}/${id}`, {
      method: "PATCH",
      body: data,
    })
  }

  async delete<T>(endpoint: string, id: string | number): Promise<T> {
    return this.request<T>(`${endpoint}/${id}`, {
      method: "DELETE",
    })
  }

